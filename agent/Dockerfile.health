# Dockerfile for Health Agent
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY backend/common/ ./backend/common/
COPY backend/agents/health/ ./backend/agents/health/
COPY backend/agents/__init__.py ./backend/agents/
COPY backend/__init__.py ./backend/

# Create non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

# Expose port
EXPOSE 10011

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:10011/health || exit 1

# Run the application
CMD ["python", "-m", "uvicorn", "backend.agents.health.server:app", "--host", "0.0.0.0", "--port", "10011"]
